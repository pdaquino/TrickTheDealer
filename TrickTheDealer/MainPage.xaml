            		<SolidColorBrush Color="{StaticResource PhoneDisabledColor}"/>
            	</TextBlock.Foreground>
            </TextBlock>
            <TextBlock Text="Player drinks:" Height="51" Canvas.Left="13" Canvas.Top="558" FontSize="24" VerticalAlignment="Center" />
