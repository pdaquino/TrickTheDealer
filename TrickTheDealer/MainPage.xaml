            <TextBlock x:Name="AgressivenessLabel" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Aggressiveness: " VerticalAlignment="Top" TextAlignment="Center" Canvas.Left="149" Canvas.Top="367"/>

